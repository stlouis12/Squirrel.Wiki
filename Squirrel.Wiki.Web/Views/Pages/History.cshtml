@model List<Squirrel.Wiki.Web.Models.PageHistoryViewModel>
@{
    ViewData["Title"] = Model.Any() ? $"History: {Model.First().PageTitle}" : "Page History";
    var pageTitle = Model.Any() ? Model.First().PageTitle : "Unknown Page";
    var pageId = Model.Any() ? Model.First().PageId : 0;
}

<div class="page-history">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-clock-history"></i> Page History
        </h1>
        @if (pageId > 0)
        {
            <a href="@Url.Action("Index", "Wiki", new { id = pageId })" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Page
            </a>
        }
    </div>

    @if (Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            Viewing version history for <strong>@pageTitle</strong>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Version</th>
                        <th>Edited By</th>
                        <th>Date & Time</th>
                        <th>Comment</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var version in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">v@(version.VersionNumber)</span>
                                @if (version == Model.First())
                                {
                                    <span class="badge bg-success ms-1">Current</span>
                                }
                            </td>
                            <td>
                                <i class="bi bi-person"></i> @version.EditedBy
                            </td>
                            <td>
                                <span title="@version.EditedOn.ToString("F")">
                                    @version.EditedOn.ToString("MMM dd, yyyy 'at' HH:mm")
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(version.ChangeComment))
                                {
                                    <span>@version.ChangeComment</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No comment</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="@Url.Action("Version", "Pages", new { id = version.PageId, versionId = version.VersionId })" 
                                       class="btn btn-outline-primary" title="View this version">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (version != Model.First())
                                    {
                                        <button type="button" class="btn btn-outline-warning" 
                                                onclick="confirmRevert(@version.VersionNumber)"
                                                title="Revert to this version">
                                            <i class="bi bi-arrow-counterclockwise"></i> Revert
                                        </button>
                                    }
                                    @if (Model.Count > 1 && version != Model.First())
                                    {
                                        <a href="@Url.Action("Compare", "Pages", new { id = version.PageId, version1 = Model.First().VersionId, version2 = version.VersionId })" 
                                           class="btn btn-outline-info" title="Compare with current">
                                            <i class="bi bi-file-diff"></i> Compare
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <i class="bi bi-info-circle"></i> 
                <small>Total versions: <strong>@Model.Count</strong></small>
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No version history available for this page.
        </div>
    }
</div>

<!-- Revert Confirmation Modal -->
<div class="modal fade" id="revertModal" tabindex="-1" aria-labelledby="revertModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="revertModalLabel">Revert to Previous Version</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to revert to version <strong id="revertVersionNumber"></strong>?</p>
                <p class="text-warning">
                    <i class="bi bi-exclamation-triangle"></i> 
                    This will create a new version with the content from the selected version.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="revertForm" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-arrow-counterclockwise"></i> Revert
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmRevert(versionNumber) {
            document.getElementById('revertVersionNumber').textContent = versionNumber;
            // Build the URL properly in JavaScript
            document.getElementById('revertForm').action = '/Pages/Revert?id=@pageId&versionNumber=' + versionNumber;
            
            var modal = new bootstrap.Modal(document.getElementById('revertModal'));
            modal.show();
        }

        // Add tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
