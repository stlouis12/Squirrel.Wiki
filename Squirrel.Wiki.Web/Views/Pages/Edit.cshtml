@model Squirrel.Wiki.Web.Models.PageViewModel
@{
    ViewData["Title"] = Model.IsNew ? "New Page" : $"Edit: {Model.Title}";
}

<div class="page-editor">
    <h1>
        <i class="bi bi-pencil-square"></i> 
        @(Model.IsNew ? "Create New Page" : "Edit Page")
    </h1>

    <form asp-action="@(Model.IsNew ? "New" : "Edit")" asp-controller="Pages" method="post" id="pageForm">
        @Html.AntiForgeryToken()
        
        @if (!Model.IsNew)
        {
            <input type="hidden" asp-for="Id" />
        }

        <div class="row">
            <div class="col-lg-8">
                <!-- Title -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title <span class="text-danger">*</span></label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter page title" autofocus />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Content Editor -->
                <div class="mb-3">
                    <label asp-for="Content" class="form-label">
                        Content <span class="text-danger">*</span>
                        <small class="text-muted">(Markdown supported)</small>
                    </label>
                    
                    <!-- Editor Toolbar -->
                    <div class="btn-toolbar mb-2" role="toolbar">
                        <div class="btn-group btn-group-sm me-2" role="group">
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('**', '**')" title="Bold">
                                <i class="bi bi-type-bold"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('*', '*')" title="Italic">
                                <i class="bi bi-type-italic"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('`', '`')" title="Code">
                                <i class="bi bi-code"></i>
                            </button>
                        </div>
                        <div class="btn-group btn-group-sm me-2" role="group">
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('# ', '')" title="Heading 1">
                                <i class="bi bi-type-h1"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('## ', '')" title="Heading 2">
                                <i class="bi bi-type-h2"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('### ', '')" title="Heading 3">
                                <i class="bi bi-type-h3"></i>
                            </button>
                        </div>
                        <div class="btn-group btn-group-sm me-2" role="group">
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('[', '](url)')" title="Link">
                                <i class="bi bi-link-45deg"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('![', '](url)')" title="Image">
                                <i class="bi bi-image"></i>
                            </button>
                        </div>
                        <div class="btn-group btn-group-sm me-2" role="group">
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('- ', '')" title="List">
                                <i class="bi bi-list-ul"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('1. ', '')" title="Numbered List">
                                <i class="bi bi-list-ol"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="insertMarkdown('> ', '')" title="Quote">
                                <i class="bi bi-quote"></i>
                            </button>
                        </div>
                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="showPreview()">
                            <i class="bi bi-eye"></i> Preview
                        </button>
                    </div>

                    <textarea asp-for="Content" class="form-control font-monospace" rows="20" placeholder="Enter page content in Markdown format..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <!-- Preview Area -->
                <div id="previewArea" class="card d-none mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-eye"></i> Preview</span>
                        <button type="button" class="btn-close" onclick="hidePreview()"></button>
                    </div>
                    <div class="card-body" id="previewContent">
                        <div class="text-center text-muted">
                            <div class="spinner-border spinner-border-sm" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            Loading preview...
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Current Category Display -->
                @if (!Model.IsNew && Model.CategoryId.HasValue && !string.IsNullOrEmpty(Model.CategoryName))
                {
                    <div class="alert alert-info mb-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-folder-fill me-2"></i>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block">Current Category</small>
                                <strong>@Model.CategoryName</strong>
                            </div>
                        </div>
                    </div>
                }
                
                <!-- Category Selector -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">
                        <i class="bi bi-folder"></i> Category
                    </label>
                    <select asp-for="CategoryId" class="form-select" id="categorySelect">
                        <option value="">-- No Category --</option>
                        @foreach (var category in Model.AllCategories.OrderBy(c => c.FullPath))
                        {
                            <option value="@category.Id" 
                                    data-level="@category.Level"
                                    data-path="@category.FullPath">
                                @category.DisplayName
                            </option>
                        }
                    </select>
                    <div class="form-text">
                        <i class="bi bi-info-circle"></i> Organize your page into a category
                    </div>
                </div>

                <!-- Tags -->
                <div class="mb-3">
                    <label asp-for="RawTags" class="form-label">
                        Tags
                        <small class="text-muted">(comma-separated)</small>
                    </label>
                    <input asp-for="RawTags" class="form-control" placeholder="tag1, tag2, tag3" />
                    <small class="form-text text-muted">Separate tags with commas</small>
                </div>

                <!-- Lock Page (Admin only) -->
                @if (!Model.IsNew)
                {
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsLocked" class="form-check-input" type="checkbox" />
                            <label asp-for="IsLocked" class="form-check-label">
                                Lock page (admin only)
                            </label>
                        </div>
                        <small class="form-text text-muted">Locked pages can only be edited by administrators</small>
                    </div>
                }

                <!-- Help Card -->
                <div class="card bg-light">
                    <div class="card-header">
                        <i class="bi bi-info-circle"></i> Markdown Help
                    </div>
                    <div class="card-body small">
                        <p><strong>Formatting:</strong></p>
                        <ul class="mb-2">
                            <li><code>**bold**</code> for <strong>bold</strong></li>
                            <li><code>*italic*</code> for <em>italic</em></li>
                            <li><code>`code`</code> for <code>code</code></li>
                        </ul>
                        <p><strong>Headings:</strong></p>
                        <ul class="mb-2">
                            <li><code># Heading 1</code></li>
                            <li><code>## Heading 2</code></li>
                            <li><code>### Heading 3</code></li>
                        </ul>
                        <p><strong>Links & Images:</strong></p>
                        <ul class="mb-0">
                            <li><code>[text](url)</code> for links</li>
                            <li><code>![alt](url)</code> for images</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-4 border-top pt-3">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-check-circle"></i> @(Model.IsNew ? "Create Page" : "Save Changes")
            </button>
            <a href="@(Model.IsNew ? Url.Action("AllPages", "Pages") : Url.Action("Index", "Wiki", new { id = Model.Id, slug = Model.Slug }))" 
               class="btn btn-secondary btn-lg">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Markdown editor helper functions
        function insertMarkdown(before, after) {
            const textarea = document.getElementById('Content');
            const start = textarea.selectionStart;
            const end = textarea.selectionEnd;
            const selectedText = textarea.value.substring(start, end);
            const replacement = before + selectedText + after;
            
            textarea.value = textarea.value.substring(0, start) + replacement + textarea.value.substring(end);
            textarea.focus();
            textarea.selectionStart = start + before.length;
            textarea.selectionEnd = start + before.length + selectedText.length;
        }

        // Preview functionality
        async function showPreview() {
            const content = document.getElementById('Content').value;
            const previewArea = document.getElementById('previewArea');
            const previewContent = document.getElementById('previewContent');
            
            previewArea.classList.remove('d-none');
            previewContent.innerHTML = '<div class="text-center text-muted"><div class="spinner-border spinner-border-sm" role="status"><span class="visually-hidden">Loading...</span></div> Loading preview...</div>';
            
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const response = await fetch('@Url.Action("GetPreview", "Pages")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(content)
                });
                
                if (response.ok) {
                    const html = await response.text();
                    previewContent.innerHTML = html || '<div class="text-muted">No content to preview</div>';
                } else {
                    const errorText = await response.text();
                    console.error('Preview error:', errorText);
                    previewContent.innerHTML = '<div class="alert alert-danger">Failed to load preview. Status: ' + response.status + '</div>';
                }
            } catch (error) {
                console.error('Preview exception:', error);
                previewContent.innerHTML = '<div class="alert alert-danger">Error loading preview: ' + error.message + '</div>';
            }
        }

        function hidePreview() {
            document.getElementById('previewArea').classList.add('d-none');
        }

        // Auto-save draft (optional enhancement)
        let autoSaveTimer;
        document.getElementById('Content').addEventListener('input', function() {
            clearTimeout(autoSaveTimer);
            autoSaveTimer = setTimeout(function() {
                // Could implement auto-save to localStorage here
                console.log('Auto-save triggered');
            }, 5000);
        });
    </script>
}

@section Styles {
    <style>
        .page-editor textarea {
            font-family: 'Courier New', Courier, monospace;
            font-size: 14px;
        }
        
        #previewContent {
            min-height: 200px;
            max-height: 500px;
            overflow-y: auto;
        }
        
        .btn-toolbar {
            flex-wrap: wrap;
        }
    </style>
}
