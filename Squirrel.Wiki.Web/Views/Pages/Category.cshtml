@model Squirrel.Wiki.Web.Models.PageListViewModel
@{
    ViewData["Title"] = $"{Localizer["PagesInCategory"]} '{ViewData["CategoryName"]}'";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-folder-fill text-primary"></i>
                @Localizer["PagesInCategory"] '<span class="text-primary">@ViewData["CategoryName"]</span>'
            </h1>

            @if (Model.Pages.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    @Localizer["FoundPagesWithTag"] <strong>@Model.Pages.Count</strong> @Localizer["PagesInThisCategory"]
                </div>

                <div class="list-group">
                    @foreach (var item in Model.Pages)
                    {
                        <a href="@Url.Action("Index", "Wiki", new { id = item.Id, slug = item.Slug })" 
                           class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1">
                                        @item.Title
                                        @if (item.IsLocked)
                                        {
                                            <i class="bi bi-lock-fill text-warning" title="@Localizer["Locked"]"></i>
                                        }
                                    </h5>
                                    <p class="mb-1 text-muted">
                                        <small>
                                            <i class="bi bi-person"></i> @Localizer["CreatedByOn"] @item.CreatedBy
                                            @Localizer["On"].ToString().ToLower() @item.CreatedOn.ToString("MMM dd, yyyy")
                                        </small>
                                    </p>
                                    @if (item.ModifiedOn != item.CreatedOn)
                                    {
                                        <p class="mb-0 text-muted">
                                            <small>
                                                <i class="bi bi-pencil"></i> @Localizer["LastModifiedByOn"] @item.ModifiedBy
                                                @Localizer["On"].ToString().ToLower() @item.ModifiedOn.ToString("MMM dd, yyyy")
                                            </small>
                                        </p>
                                    }
                                </div>
                                <span class="badge bg-primary rounded-pill">
                                    <i class="bi bi-arrow-right"></i>
                                </span>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    @Localizer["NoPagesFoundInCategory"] '<strong>@ViewData["CategoryName"]</strong>'.
                </div>
            }

            <div class="mt-4">
                <a href="@Url.Action("AllPages", "Pages")" class="btn btn-secondary">
                    <i class="bi bi-file-text"></i> @Localizer["ViewAllPages"]
                </a>
            </div>
        </div>
    </div>
</div>
