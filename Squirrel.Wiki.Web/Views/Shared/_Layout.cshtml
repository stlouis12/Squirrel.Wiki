@inject Squirrel.Wiki.Core.Services.ISettingsService SettingsService
@{
    var siteName = await SettingsService.GetSettingAsync<string>("SiteName") ?? "Squirrel Wiki";
    // Remove quotes if present (settings are stored as JSON)
    siteName = siteName.Trim('"');
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @siteName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <strong>üêøÔ∏è @siteName</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex">
                    <ul class="navbar-nav me-auto">
                        @await Component.InvokeAsync("MainNavigation")
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-gear"></i> Admin
                                    </a>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="bi bi-person"></i> Profile
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                                <i class="bi bi-speedometer2"></i> Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Settings" asp-action="Index">
                                                <i class="bi bi-sliders"></i> Settings
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Menus" asp-action="Index">
                                                <i class="bi bi-menu-button-wide"></i> Menus
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Categories" asp-action="Index">
                                                <i class="bi bi-folder-fill"></i> Categories
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                                                <i class="bi bi-people"></i> Users
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @inject Squirrel.Wiki.Core.Services.IMenuService MenuService
    <div class="container-fluid">
        <div class="row">
            @{
                // Check if there's an active sidebar menu
                var activeSidebar = await MenuService.GetActiveMenuByTypeAsync(Squirrel.Wiki.Core.Database.Entities.MenuType.Sidebar);
                var hasSidebar = activeSidebar != null && activeSidebar.IsEnabled && !string.IsNullOrWhiteSpace(activeSidebar.MenuMarkup);
            }
            
            @if (hasSidebar)
            {
                @* Sidebar Navigation (if active) *@
                <aside class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" id="sidebarNav">
                    @await Component.InvokeAsync("SidebarNavigation")
                </aside>
                
                @* Main Content with sidebar *@
                <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pb-3">
                    @RenderBody()
                </main>
            }
            else
            {
                @* Main Content without sidebar (full width) *@
                <main role="main" class="col-12 px-md-4 pb-3">
                    @RenderBody()
                </main>
            }
        </div>
    </div>

    @{
        // Check if there's an active custom footer
        var activeFooter = await MenuService.GetActiveMenuByTypeAsync(Squirrel.Wiki.Core.Database.Entities.MenuType.Footer);
        var hasCustomFooter = activeFooter != null && activeFooter.IsEnabled;
    }

    @if (hasCustomFooter)
    {
        @* Custom footer from database *@
        @await Component.InvokeAsync("Footer")
    }
    else
    {
        @* Default footer *@
        <footer class="border-top footer text-muted">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        &copy; 2025 - @siteName v3.0 - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
