@model Squirrel.Wiki.Web.Models.SearchResultsViewModel
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.Query) ? "Search" : $"Search: {Model.Query}";
}

<div class="search-page">
    <h1><i class="bi bi-search"></i> Search Wiki</h1>

    <!-- Search Form -->
    <form asp-action="Index" asp-controller="Search" method="get" class="mb-4">
        <div class="row g-3">
            <div class="col-md-8">
                <div class="input-group input-group-lg">
                    <input type="text" name="query" class="form-control" 
                           placeholder="Search for pages..." 
                           value="@Model.Query" 
                           autofocus />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </div>
            <div class="col-md-4">
                <select name="pageSize" class="form-select form-select-lg">
                    <option value="10" selected="@(Model.PageSize == 10)">10 results</option>
                    <option value="20" selected="@(Model.PageSize == 20)">20 results</option>
                    <option value="50" selected="@(Model.PageSize == 50)">50 results</option>
                    <option value="100" selected="@(Model.PageSize == 100)">100 results</option>
                </select>
            </div>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.Query))
    {
        <!-- Search Results -->
        <div class="search-results">
            @if (Model.Results.Any())
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i> 
                    Found <strong>@Model.TotalResults</strong> result@(Model.TotalResults != 1 ? "s" : "") for "<strong>@Model.Query</strong>"
                </div>

                <div class="list-group mb-4">
                    @foreach (var result in Model.Results)
                    {
                        <a href="@Url.Action("Index", "Wiki", new { id = result.PageId, slug = result.Slug })" 
                           class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="mb-1">
                                        @result.Title
                                        <span class="badge bg-secondary ms-2">Score: @result.Score.ToString("F2")</span>
                                    </h5>
                                    <p class="mb-1 text-muted">@Html.Raw(result.Excerpt)</p>
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> Last modified by <strong>@result.ModifiedBy</strong> 
                                        on @result.ModifiedOn.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                                <div class="ms-3">
                                    <i class="bi bi-chevron-right"></i>
                                </div>
                            </div>
                        </a>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Search results pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link" 
                                   href="@Url.Action("Index", new { query = Model.Query, page = Model.Page - 1, pageSize = Model.PageSize })">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>

                            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : "")">
                                    <a class="page-link" 
                                       href="@Url.Action("Index", new { query = Model.Query, page = i, pageSize = Model.PageSize })">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link" 
                                   href="@Url.Action("Index", new { query = Model.Query, page = Model.Page + 1, pageSize = Model.PageSize })">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <p class="text-center text-muted">
                        <small>Page @Model.Page of @Model.TotalPages</small>
                    </p>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> 
                    No results found for "<strong>@Model.Query</strong>".
                    <hr />
                    <p class="mb-0">Try:</p>
                    <ul class="mb-0">
                        <li>Using different keywords</li>
                        <li>Checking your spelling</li>
                        <li>Using more general terms</li>
                        <li><a href="@Url.Action("AllPages", "Pages")" class="alert-link">Browsing all pages</a></li>
                    </ul>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Search Tips -->
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-lightbulb"></i> Search Tips
                    </div>
                    <div class="card-body">
                        <ul>
                            <li>Use specific keywords for better results</li>
                            <li>Search is case-insensitive</li>
                            <li>Multiple words will search for pages containing all words</li>
                            <li>Results are ranked by relevance</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <i class="bi bi-compass"></i> Quick Links
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="@Url.Action("AllPages", "Pages")">
                                    <i class="bi bi-file-earmark-text"></i> Browse All Pages
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("AllTags", "Pages")">
                                    <i class="bi bi-tags"></i> Browse All Tags
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("New", "Pages")">
                                    <i class="bi bi-plus-circle"></i> Create New Page
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-suggest functionality (optional enhancement)
        const searchInput = document.querySelector('input[name="query"]');
        let suggestTimeout;

        searchInput.addEventListener('input', function() {
            clearTimeout(suggestTimeout);
            const query = this.value;
            
            if (query.length >= 3) {
                suggestTimeout = setTimeout(async function() {
                    // Could implement auto-suggest here
                    console.log('Suggest for:', query);
                }, 300);
            }
        });
    </script>
}
