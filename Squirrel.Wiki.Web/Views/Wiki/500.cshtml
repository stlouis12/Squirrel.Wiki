@{
    ViewData["Title"] = Localizer["ServerError"].Value;
}

<div class="error-page text-center py-5">
    <div class="error-icon mb-4">
        <i class="bi bi-exclamation-triangle" style="font-size: 6rem; color: #dc3545;"></i>
    </div>
    
    <h1 class="display-4 mb-3">@Localizer["500ServerError"]</h1>
    
    <p class="lead text-muted mb-4">
        @Localizer["ServerErrorMessage"]
    </p>
    
    <div class="error-actions">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-2">
            <i class="bi bi-house"></i> @Localizer["GoHome"]
        </a>
        <button onclick="window.location.reload()" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-clockwise"></i> @Localizer["TryAgain"]
        </button>
    </div>
    
    <div class="mt-5">
        <p class="text-muted">
            <small>
                @Localizer["TryAgainLater"]
            </small>
        </p>
    </div>
</div>

@section Styles {
    <style>
        .error-page {
            min-height: 60vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    </style>
}
