@model Squirrel.Wiki.Web.Models.Admin.ResetPasswordViewModel
@{
    ViewData["Title"] = $"{Localizer["ResetPassword"]} - {Model.Username}";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>@Localizer["ResetPassword"]</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Users"]</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.UserId">@Model.Username</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Localizer["ResetPassword"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-key"></i> @Localizer["ResetPasswordFor"] @Model.Username
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i>
                        @Localizer["ResetPasswordInfo", Model.Username]
                    </div>

                    <form asp-action="ResetPassword" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Username" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                @Localizer["NewPassword"] <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NewPassword" type="password" class="form-control" 
                                   placeholder="@Localizer["EnterNewPassword"]" autofocus />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                @Localizer["ConfirmPassword"] <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" 
                                   placeholder="@Localizer["ConfirmNewPassword"]" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="alert alert-secondary">
                            <h6 class="alert-heading">@Localizer["PasswordRequirements"]</h6>
                            <ul class="mb-0 small">
                                <li>@Localizer["AtLeast8Characters"]</li>
                                <li>@Localizer["ContainsUppercase"]</li>
                                <li>@Localizer["ContainsLowercase"]</li>
                                <li>@Localizer["ContainsDigit"]</li>
                                <li>@Localizer["ContainsSpecialCharacter"]</li>
                            </ul>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> @Localizer["ResetPassword"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Card -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-lightbulb"></i> @Localizer["Tips"]</h6>
                </div>
                <div class="card-body">
                    <p class="small mb-2">
                        <strong>@Localizer["SecurityBestPractices"]:</strong>
                    </p>
                    <ul class="small mb-0">
                        <li>@Localizer["UseStrongUniquePassword"]</li>
                        <li>@Localizer["AvoidCommonWordsOrPatterns"]</li>
                        <li>@Localizer["ConsiderPasswordManager"]</li>
                        <li>@Localizer["InformUserOfPasswordChange"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
