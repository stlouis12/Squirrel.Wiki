@model IEnumerable<Squirrel.Wiki.Core.Models.FileDto>
@using Squirrel.Wiki.Core.Services.Configuration
@using Squirrel.Wiki.Web.Extensions
@inject IStringLocalizer<SharedResources> Localizer
@inject ITimezoneService TimezoneService
@{
    ViewData["Title"] = Localizer["SearchFiles"];
    var searchTerm = ViewBag.SearchTerm as string ?? "";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-search"></i> @Localizer["SearchFiles"]</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Files"]</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Localizer["Search"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Search Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-funnel"></i> @Localizer["SearchFiles"]</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Search" method="get">
                        <div class="row g-3">
                            <div class="col-md-9">
                                <label for="searchTerm" class="form-label">@Localizer["SearchTerm"]</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="searchTerm" 
                                       name="searchTerm" 
                                       value="@searchTerm"
                                       placeholder="@Localizer["SearchByFilenameOrDescription"]"
                                       autofocus>
                            </div>
                            
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bi bi-search"></i> @Localizer["Search"]
                                </button>
                                <a asp-action="Search" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> @Localizer["Clear"]
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul"></i> @Localizer["SearchResults"]
                        @if (Model != null && Model.Any())
                        {
                            <span class="badge bg-primary ms-2">@Model.Count() @Localizer["FilesFound"]</span>
                        }
                    </h5>
                    @if (Model != null && Model.Any())
                    {
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="toggleView('grid')">
                                <i class="bi bi-grid-3x3-gap"></i> @Localizer["Grid"]
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary active" onclick="toggleView('list')">
                                <i class="bi bi-list-ul"></i> @Localizer["List"]
                            </button>
                        </div>
                    }
                </div>
                <div class="card-body">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-search display-1 text-muted"></i>
                            <p class="mt-3 text-muted">
                                @if (string.IsNullOrEmpty(searchTerm))
                                {
                                    <text>@Localizer["EnterSearchCriteria"]</text>
                                }
                                else
                                {
                                    <text>@Localizer["NoFilesFoundMatchingCriteria"]</text>
                                }
                            </p>
                        </div>
                    }
                    else
                    {
                        <!-- List View -->
                        <div id="listView" class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>@Localizer["FileName"]</th>
                                        <th>@Localizer["Size"]</th>
                                        <th>@Localizer["Type"]</th>
                                        <th>@Localizer["Folder"]</th>
                                        <th>@Localizer["UploadedBy"]</th>
                                        <th>@Localizer["UploadedOn"]</th>
                                        <th>@Localizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in Model)
                                    {
                                        <tr>
                                            <td>
                                                <i class="bi bi-file-earmark me-2"></i>
                                                <a href="#" class="file-details-link" data-file-id="@file.Id">@file.FileName</a>
                                            </td>
                                            <td>@file.FileSizeFormatted</td>
                                            <td><small class="text-muted">@file.ContentType</small></td>
                                            <td>
                                                @if (file.FolderId.HasValue)
                                                {
                                                    <a asp-action="Index" asp-route-folderId="@file.FolderId">
                                                        @file.FolderName
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@Localizer["Root"]</span>
                                                }
                                            </td>
                                            <td>@file.UploadedBy</td>
                                            <td>
                                                <span title="@await file.UploadedOn.ToLocalTimeStringAsync(TimezoneService, "F")">
                                                    @await file.UploadedOn.ToLocalTimeStringAsync(TimezoneService, "g")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="#" class="btn btn-outline-primary file-details-link" 
                                                       data-file-id="@file.Id"
                                                       title="@Localizer["ViewDetails"]">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Download" asp-route-id="@file.Id" 
                                                       class="btn btn-outline-success" 
                                                       title="@Localizer["Download"]">
                                                        <i class="bi bi-download"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Grid View (Hidden by default) -->
                        <div id="gridView" class="row g-3" style="display: none;">
                            @foreach (var file in Model)
                            {
                                var isImage = file.ContentType?.StartsWith("image/", StringComparison.OrdinalIgnoreCase) ?? false;
                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <div class="card h-100">
                                        @if (isImage)
                                        {
                                            <img src="@Url.Action("Download", new { id = file.Id })" 
                                                 class="card-img-top" 
                                                 alt="@file.FileName"
                                                 style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                                 style="height: 200px;">
                                                <i class="bi bi-file-earmark display-1 text-muted"></i>
                                            </div>
                                        }
                                        <div class="card-body">
                                            <h6 class="card-title text-truncate" title="@file.FileName">@file.FileName</h6>
                                            <p class="card-text small text-muted mb-2">
                                                <i class="bi bi-hdd"></i> @file.FileSizeFormatted<br>
                                                <i class="bi bi-person"></i> @file.UploadedBy<br>
                                                <i class="bi bi-calendar"></i> @await file.UploadedOn.ToLocalDateStringAsync(TimezoneService)
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="d-grid gap-2">
                                                <a href="#" class="btn btn-sm btn-primary file-details-link" data-file-id="@file.Id">
                                                    <i class="bi bi-eye"></i> @Localizer["View"]
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- File Details Modal -->
<div class="modal fade" id="fileDetailsModal" tabindex="-1" aria-labelledby="fileDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="fileDetailsModalLabel">@Localizer["FileDetails"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="fileDetailsContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleView(view) {
            const listView = document.getElementById('listView');
            const gridView = document.getElementById('gridView');
            const buttons = document.querySelectorAll('.btn-group button');
            
            if (view === 'grid') {
                listView.style.display = 'none';
                gridView.style.display = 'flex';
                buttons[0].classList.add('active');
                buttons[1].classList.remove('active');
            } else {
                listView.style.display = 'block';
                gridView.style.display = 'none';
                buttons[0].classList.remove('active');
                buttons[1].classList.add('active');
            }
        }

        // File details modal
        document.addEventListener('click', function(e) {
            if (e.target.closest('.file-details-link')) {
                e.preventDefault();
                const link = e.target.closest('.file-details-link');
                const fileId = link.dataset.fileId;
                
                // Show modal
                const modal = new bootstrap.Modal(document.getElementById('fileDetailsModal'));
                modal.show();
                
                // Load file details
                fetch(`/Files/GetFileDetails/${fileId}`)
                    .then(response => response.text())
                    .then(html => {
                        document.getElementById('fileDetailsContent').innerHTML = html;
                    })
                    .catch(error => {
                        document.getElementById('fileDetailsContent').innerHTML = 
                            '<div class="alert alert-danger">Error loading file details</div>';
                    });
            }
        });

        // Copy markdown embed code to clipboard using event delegation
        document.addEventListener('click', function(e) {
            if (e.target.closest('.copy-markdown-btn')) {
                e.preventDefault();
                const button = e.target.closest('.copy-markdown-btn');
                const input = button.closest('.input-group').querySelector('input');
                
                // Copy to clipboard
                input.select();
                document.execCommand('copy');
                
                // Visual feedback
                const originalHTML = button.innerHTML;
                button.innerHTML = '<i class="bi bi-check"></i>';
                setTimeout(() => {
                    button.innerHTML = originalHTML;
                }, 2000);
            }
        });
    </script>
}
