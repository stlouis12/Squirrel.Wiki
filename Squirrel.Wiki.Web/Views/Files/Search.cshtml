@model IEnumerable<Squirrel.Wiki.Core.Models.FileDto>
@using Squirrel.Wiki.Core.Services.Configuration
@using Squirrel.Wiki.Web.Extensions
@inject IStringLocalizer<SharedResources> Localizer
@inject ITimezoneService TimezoneService
@{
    ViewData["Title"] = Localizer["SearchFiles"];
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var folderId = ViewBag.FolderId as int?;
    var contentType = ViewBag.ContentType as string;
    var uploadedBy = ViewBag.UploadedBy as string;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-search"></i> @Localizer["SearchFiles"]</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Files"]</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Localizer["Search"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Search Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-funnel"></i> @Localizer["SearchFilters"]</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Search" method="get">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="searchTerm" class="form-label">@Localizer["SearchTerm"]</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="searchTerm" 
                                       name="searchTerm" 
                                       value="@searchTerm"
                                       placeholder="@Localizer["SearchByFilenameOrDescription"]">
                            </div>
                            
                            <div class="col-md-3">
                                <label for="contentType" class="form-label">@Localizer["FileType"]</label>
                                <select class="form-select" id="contentType" name="contentType">
                                    <option value="">@Localizer["AllTypes"]</option>
                                    <option value="image/" selected="@(contentType?.StartsWith("image/") == true)">@Localizer["Images"]</option>
                                    <option value="application/pdf" selected="@(contentType == "application/pdf")">@Localizer["PDFDocuments"]</option>
                                    <option value="application/vnd.openxmlformats-officedocument" selected="@(contentType?.Contains("officedocument") == true)">@Localizer["OfficeDocuments"]</option>
                                    <option value="text/" selected="@(contentType?.StartsWith("text/") == true)">@Localizer["TextFiles"]</option>
                                    <option value="video/" selected="@(contentType?.StartsWith("video/") == true)">@Localizer["Videos"]</option>
                                    <option value="audio/" selected="@(contentType?.StartsWith("audio/") == true)">@Localizer["Audio"]</option>
                                </select>
                            </div>
                            
                            <div class="col-md-3">
                                <label for="uploadedBy" class="form-label">@Localizer["UploadedBy"]</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="uploadedBy" 
                                       name="uploadedBy" 
                                       value="@uploadedBy"
                                       placeholder="@Localizer["Username"]">
                            </div>
                        </div>
                        
                        <div class="row g-3 mt-2">
                            <div class="col-md-3">
                                <label for="uploadedAfter" class="form-label">@Localizer["UploadedAfter"]</label>
                                <input type="date" 
                                       class="form-control" 
                                       id="uploadedAfter" 
                                       name="uploadedAfter"
                                       value="@ViewBag.UploadedAfter">
                            </div>
                            
                            <div class="col-md-3">
                                <label for="uploadedBefore" class="form-label">@Localizer["UploadedBefore"]</label>
                                <input type="date" 
                                       class="form-control" 
                                       id="uploadedBefore" 
                                       name="uploadedBefore"
                                       value="@ViewBag.UploadedBefore">
                            </div>
                            
                            <div class="col-md-6 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bi bi-search"></i> @Localizer["Search"]
                                </button>
                                <a asp-action="Search" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> @Localizer["Clear"]
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul"></i> @Localizer["SearchResults"]
                        @if (Model != null && Model.Any())
                        {
                            <span class="badge bg-primary ms-2">@Model.Count() @Localizer["FilesFound"]</span>
                        }
                    </h5>
                    @if (Model != null && Model.Any())
                    {
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="toggleView('grid')">
                                <i class="bi bi-grid-3x3-gap"></i> @Localizer["Grid"]
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary active" onclick="toggleView('list')">
                                <i class="bi bi-list-ul"></i> @Localizer["List"]
                            </button>
                        </div>
                    }
                </div>
                <div class="card-body">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-search display-1 text-muted"></i>
                            <p class="mt-3 text-muted">
                                @if (string.IsNullOrEmpty(searchTerm) && contentType == null && uploadedBy == null)
                                {
                                    <text>@Localizer["EnterSearchCriteria"]</text>
                                }
                                else
                                {
                                    <text>@Localizer["NoFilesFoundMatchingCriteria"]</text>
                                }
                            </p>
                        </div>
                    }
                    else
                    {
                        <!-- List View -->
                        <div id="listView" class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>@Localizer["FileName"]</th>
                                        <th>@Localizer["Size"]</th>
                                        <th>@Localizer["Type"]</th>
                                        <th>@Localizer["Folder"]</th>
                                        <th>@Localizer["UploadedBy"]</th>
                                        <th>@Localizer["UploadedOn"]</th>
                                        <th>@Localizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in Model)
                                    {
                                        <tr>
                                            <td>
                                                <i class="bi bi-file-earmark me-2"></i>
                                                <a asp-action="Details" asp-route-id="@file.Id">@file.FileName</a>
                                            </td>
                                            <td>@file.FileSizeFormatted</td>
                                            <td><small class="text-muted">@file.ContentType</small></td>
                                            <td>
                                                @if (file.FolderId.HasValue)
                                                {
                                                    <a asp-action="Browse" asp-route-folderId="@file.FolderId">
                                                        @file.FolderName
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@Localizer["Root"]</span>
                                                }
                                            </td>
                                            <td>@file.UploadedBy</td>
                                            <td>
                                                <span title="@await file.UploadedOn.ToLocalTimeStringAsync(TimezoneService, "F")">
                                                    @await file.UploadedOn.ToLocalTimeStringAsync(TimezoneService, "g")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@file.Id" 
                                                       class="btn btn-outline-primary" 
                                                       title="@Localizer["ViewDetails"]">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Download" asp-route-id="@file.Id" 
                                                       class="btn btn-outline-success" 
                                                       title="@Localizer["Download"]">
                                                        <i class="bi bi-download"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@file.Id" 
                                                       class="btn btn-outline-secondary" 
                                                       title="@Localizer["Edit"]">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Grid View (Hidden by default) -->
                        <div id="gridView" class="row g-3" style="display: none;">
                            @foreach (var file in Model)
                            {
                                var isImage = file.ContentType?.StartsWith("image/", StringComparison.OrdinalIgnoreCase) ?? false;
                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <div class="card h-100">
                                        @if (isImage)
                                        {
                                            <img src="@Url.Action("Download", new { id = file.Id })" 
                                                 class="card-img-top" 
                                                 alt="@file.FileName"
                                                 style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                                 style="height: 200px;">
                                                <i class="bi bi-file-earmark display-1 text-muted"></i>
                                            </div>
                                        }
                                        <div class="card-body">
                                            <h6 class="card-title text-truncate" title="@file.FileName">@file.FileName</h6>
                                            <p class="card-text small text-muted mb-2">
                                                <i class="bi bi-hdd"></i> @file.FileSizeFormatted<br>
                                                <i class="bi bi-person"></i> @file.UploadedBy<br>
                                                <i class="bi bi-calendar"></i> @await file.UploadedOn.ToLocalDateStringAsync(TimezoneService)
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="d-grid gap-2">
                                                <a asp-action="Details" asp-route-id="@file.Id" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye"></i> @Localizer["View"]
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleView(view) {
            const listView = document.getElementById('listView');
            const gridView = document.getElementById('gridView');
            const buttons = document.querySelectorAll('.btn-group button');
            
            if (view === 'grid') {
                listView.style.display = 'none';
                gridView.style.display = 'flex';
                buttons[0].classList.add('active');
                buttons[1].classList.remove('active');
            } else {
                listView.style.display = 'block';
                gridView.style.display = 'none';
                buttons[0].classList.remove('active');
                buttons[1].classList.add('active');
            }
        }
    </script>
}
