@model Squirrel.Wiki.Core.Models.FileDetailsDto
@inject IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = Model.FileName;
    var isImage = Model.ContentType?.StartsWith("image/", StringComparison.OrdinalIgnoreCase) ?? false;
    var isPdf = Model.ContentType?.Equals("application/pdf", StringComparison.OrdinalIgnoreCase) ?? false;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Files"]</a></li>
                    @if (Model.FolderId.HasValue && !string.IsNullOrEmpty(Model.FolderPath))
                    {
                        var pathParts = Model.FolderPath.Split('/', StringSplitOptions.RemoveEmptyEntries);
                        for (int i = 0; i < pathParts.Length; i++)
                        {
                            <li class="breadcrumb-item">
                                <a asp-action="Browse" asp-route-path="@string.Join("/", pathParts.Take(i + 1))">@pathParts[i]</a>
                            </li>
                        }
                    }
                    <li class="breadcrumb-item active" aria-current="page">@Model.FileName</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- File Preview Card -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark"></i> @Model.FileName
                    </h5>
                    <div>
                        <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-download"></i> @Localizer["Download"]
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary">
                            <i class="bi bi-pencil"></i> @Localizer["Edit"]
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (isImage)
                    {
                        <div class="text-center">
                            <img src="@Url.Action("Download", new { id = Model.Id })" 
                                 alt="@Model.FileName" 
                                 class="img-fluid rounded"
                                 style="max-height: 600px;" />
                        </div>
                    }
                    else if (isPdf)
                    {
                        <div class="embed-responsive" style="height: 600px;">
                            <iframe src="@Url.Action("Download", new { id = Model.Id })" 
                                    class="embed-responsive-item w-100 h-100 border-0"
                                    title="@Model.FileName">
                            </iframe>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-file-earmark display-1 text-muted"></i>
                            <p class="mt-3 text-muted">@Localizer["PreviewNotAvailable"]</p>
                            <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-download"></i> @Localizer["DownloadToView"]
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Description Card -->
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-card-text"></i> @Localizer["Description"]</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Description</p>
                    </div>
                </div>
            }

            <!-- Version History Card -->
            @if (Model.Versions != null && Model.Versions.Any())
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-clock-history"></i> @Localizer["VersionHistory"]</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Version"]</th>
                                        <th>@Localizer["Size"]</th>
                                        <th>@Localizer["UploadedBy"]</th>
                                        <th>@Localizer["UploadedOn"]</th>
                                        <th>@Localizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var version in Model.Versions.OrderByDescending(v => v.VersionNumber))
                                    {
                                        <tr class="@(version.VersionNumber == Model.CurrentVersion ? "table-primary" : "")">
                                            <td>
                                                <strong>v@version.VersionNumber</strong>
                                                @if (version.VersionNumber == Model.CurrentVersion)
                                                {
                                                    <span class="badge bg-primary ms-1">@Localizer["Current"]</span>
                                                }
                                            </td>
                                            <td>@FormatFileSize(version.FileSize)</td>
                                            <td>@version.UploadedBy</td>
                                            <td>@version.UploadedOn.ToString("g")</td>
                                            <td>
                                                <a asp-action="DownloadVersion" 
                                                   asp-route-id="@Model.Id" 
                                                   asp-route-version="@version.VersionNumber"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="@Localizer["DownloadThisVersion"]">
                                                    <i class="bi bi-download"></i>
                                                </a>
                                                @if (version.VersionNumber != Model.CurrentVersion)
                                                {
                                                    <button type="button" 
                                                            class="btn btn-sm btn-outline-secondary"
                                                            onclick="restoreVersion(@Model.Id, @version.VersionNumber)"
                                                            title="@Localizer["RestoreThisVersion"]">
                                                        <i class="bi bi-arrow-counterclockwise"></i>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- File Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> @Localizer["FileInformation"]</h6>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">@Localizer["FileID"]:</dt>
                        <dd class="col-sm-7">
                            <code>@Model.Id</code>
                            <button class="btn btn-sm btn-link p-0 ms-1" 
                                    onclick="copyToClipboard('@Model.Id')"
                                    title="@Localizer["CopiedToClipboard"]">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </dd>

                        <dt class="col-sm-5">@Localizer["FileName"]:</dt>
                        <dd class="col-sm-7">@Model.FileName</dd>

                        <dt class="col-sm-5">@Localizer["FileSize"]:</dt>
                        <dd class="col-sm-7">@FormatFileSize(Model.FileSize)</dd>

                        <dt class="col-sm-5">@Localizer["ContentType"]:</dt>
                        <dd class="col-sm-7"><code>@Model.ContentType</code></dd>

                        <dt class="col-sm-5">@Localizer["Version"]:</dt>
                        <dd class="col-sm-7">v@Model.CurrentVersion</dd>

                        <dt class="col-sm-5">@Localizer["Visibility"]:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-@GetVisibilityBadgeClass(Model.Visibility.ToString())">
                                @Model.Visibility.ToString()
                            </span>
                        </dd>

                        @if (Model.FolderId.HasValue)
                        {
                            <dt class="col-sm-5">@Localizer["Folder"]:</dt>
                            <dd class="col-sm-7">
                                <a asp-action="Browse" asp-route-path="@Model.FolderPath">
                                    @Model.FolderPath
                                </a>
                            </dd>
                        }

                        <dt class="col-sm-5">@Localizer["UploadedBy"]:</dt>
                        <dd class="col-sm-7">@Model.UploadedBy</dd>

                        <dt class="col-sm-5">@Localizer["UploadedOn"]:</dt>
                        <dd class="col-sm-7">@Model.UploadedOn.ToString("g")</dd>

                        <dt class="col-sm-5">@Localizer["ModifiedBy"]:</dt>
                        <dd class="col-sm-7">@Model.ModifiedBy</dd>

                        <dt class="col-sm-5">@Localizer["ModifiedOn"]:</dt>
                        <dd class="col-sm-7">@Model.ModifiedOn.ToString("g")</dd>
                    </dl>
                </div>
            </div>

            <!-- Usage in Markdown Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-code-square"></i> @Localizer["UsageInMarkdown"]</h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-2">@Localizer["CopyAndPasteIntoWikiPages"]</p>
                    
                    @if (isImage)
                    {
                        <div class="mb-3">
                            <label class="form-label small fw-bold">@Localizer["ImageEmbed"]:</label>
                            <div class="input-group input-group-sm">
                                <input type="text" 
                                       class="form-control font-monospace" 
                                       value="![Alt Text](@Model.Id)" 
                                       readonly 
                                       id="imageEmbed">
                                <button class="btn btn-outline-secondary" 
                                        type="button"
                                        onclick="copyToClipboard(document.getElementById('imageEmbed').value)">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </div>
                    }
                    
                    <div class="mb-0">
                        <label class="form-label small fw-bold">@Localizer["DownloadLink"]:</label>
                        <div class="input-group input-group-sm">
                            <input type="text" 
                                   class="form-control font-monospace" 
                                   value="[Download](@Model.Id)" 
                                   readonly 
                                   id="downloadLink">
                            <button class="btn btn-outline-secondary" 
                                    type="button"
                                    onclick="copyToClipboard(document.getElementById('downloadLink').value)">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-gear"></i> @Localizer["Actions"]</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-download"></i> @Localizer["DownloadFile"]
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="bi bi-pencil"></i> @Localizer["EditMetadata"]
                        </a>
                        <button type="button" class="btn btn-danger" onclick="deleteFile(@Model.Id)">
                            <i class="bi bi-trash"></i> @Localizer["DeleteFile"]
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Show success toast
                const toast = document.createElement('div');
                toast.className = 'toast align-items-center text-white bg-success border-0 position-fixed top-0 end-0 m-3';
                toast.setAttribute('role', 'alert');
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi bi-check-circle me-2"></i>@Localizer["CopiedToClipboard"]
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                `;
                document.body.appendChild(toast);
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();
                setTimeout(() => toast.remove(), 3000);
            });
        }

        function restoreVersion(fileId, versionNumber) {
            if (confirm(`@Localizer["AreYouSureRestoreVersion"]`.replace('{0}', versionNumber).replace('{0}', versionNumber))) {
                fetch(`/Files/RestoreVersion/${fileId}/${versionNumber}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Failed to restore version');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while restoring the version');
                });
            }
        }

        function deleteFile(fileId) {
            if (confirm('@Localizer["AreYouSureDeleteFile"]')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/Files/Delete/${fileId}`;
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    form.appendChild(token.cloneNode());
                }
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}

@functions {
    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private string GetVisibilityBadgeClass(string visibility)
    {
        return visibility switch
        {
            "Public" => "success",
            "Private" => "warning",
            "Restricted" => "danger",
            _ => "secondary"
        };
    }
}
