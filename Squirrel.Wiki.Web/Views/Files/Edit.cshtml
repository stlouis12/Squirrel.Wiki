@model Squirrel.Wiki.Core.Models.FileDto
@using Squirrel.Wiki.Core.Services.Configuration
@using Squirrel.Wiki.Web.Extensions
@inject IStringLocalizer<SharedResources> Localizer
@inject ITimezoneService TimezoneService
@{
    ViewData["Title"] = Localizer["EditFile"];
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="bi bi-pencil-square"></i> @Localizer["EditFile"]
                </h2>
                <a href="@Url.Action("Index", new { folderId = Model.FolderId })" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> @Localizer["BackToFiles"]
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Files" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FolderId" />

                        <div class="mb-3">
                            <label asp-for="FileName" class="form-label">@Localizer["FileName"]</label>
                            <input asp-for="FileName" class="form-control" required />
                            <span asp-validation-for="FileName" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> 
                                @Localizer["TheDisplayNameForThisFile"]
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">@Localizer["Description"]</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">
                                @Localizer["OptionalDescriptionToHelpIdentify"]
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Visibility" class="form-label">@Localizer["Visibility"]</label>
                            <select asp-for="Visibility" class="form-select">
                                <option value="0">@Localizer["Public"] - @Localizer["AnyoneCanAccess"]</option>
                                <option value="1">@Localizer["Private"] - @Localizer["OnlyYouCanAccess"]</option>
                                <option value="2">@Localizer["Restricted"] - @Localizer["SpecificUsersCanAccess"]</option>
                            </select>
                            <span asp-validation-for="Visibility" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />

                        <h5 class="mb-3">@Localizer["FileInformation"]</h5>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>@Localizer["FileSize"]:</strong>
                                <p class="text-muted">@Model.FileSizeFormatted</p>
                            </div>
                            <div class="col-md-6">
                                <strong>@Localizer["ContentType"]:</strong>
                                <p class="text-muted">@Model.ContentType</p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>@Localizer["UploadedBy"]:</strong>
                                <p class="text-muted">@Model.UploadedBy</p>
                            </div>
                            <div class="col-md-6">
                                <strong>@Localizer["UploadedOn"]:</strong>
                                <p class="text-muted" title="@await Model.UploadedOn.ToLocalTimeStringAsync(TimezoneService, "F")">
                                    @await Model.UploadedOn.ToLocalTimeStringAsync(TimezoneService, "g")
                                </p>
                            </div>
                        </div>

                        @if (Model.CurrentVersion > 1)
                        {
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <strong>@Localizer["CurrentVersion"]:</strong>
                                    <p class="text-muted">@Model.CurrentVersion</p>
                                </div>
                            </div>
                        }

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>@Localizer["Note"]:</strong> @Localizer["ChangingFileNameOrDescriptionWillNotAffectPhysicalFile"]
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", new { folderId = Model.FolderId })" class="btn btn-secondary">
                                @Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> @Localizer["SaveChanges"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.DownloadUrl))
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-eye"></i> @Localizer["FilePreview"]</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.ContentType.StartsWith("image/"))
                        {
                            <div class="text-center">
                                <img src="@Model.DownloadUrl" alt="@Model.FileName" class="img-fluid" style="max-height: 400px;" />
                            </div>
                        }
                        else if (Model.ContentType == "application/pdf")
                        {
                            <div class="text-center">
                                <embed src="@Model.DownloadUrl" type="application/pdf" width="100%" height="600px" />
                            </div>
                        }
                        else if (Model.ContentType.StartsWith("video/"))
                        {
                            <div class="text-center">
                                <video controls style="max-width: 100%; max-height: 400px;">
                                    <source src="@Model.DownloadUrl" type="@Model.ContentType">
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                        }
                        else if (Model.ContentType.StartsWith("audio/"))
                        {
                            <div class="text-center">
                                <audio controls style="width: 100%;">
                                    <source src="@Model.DownloadUrl" type="@Model.ContentType">
                                    Your browser does not support the audio tag.
                                </audio>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted">
                                <i class="bi bi-file-earmark" style="font-size: 4rem;"></i>
                                <p>@Localizer["PreviewNotAvailableForThisFileType"]</p>
                                <a href="@Model.DownloadUrl" class="btn btn-primary">
                                    <i class="bi bi-download"></i> @Localizer["DownloadFile"]
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="card mt-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> @Localizer["DangerZone"]</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        <strong>@Localizer["DeleteThisFile"]:</strong> @Localizer["OnceYouDeleteFileNoGoingBack"]
                    </p>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i> @Localizer["DeleteFile"]
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> @Localizer["ConfirmDeletion"]
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="@Localizer["Close"]"></button>
            </div>
            <div class="modal-body">
                <p>@Localizer["AreYouSureDeleteFile"] <strong>@Model.FileName</strong>?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-circle"></i>
                    @Localizer["ThisActionCannotBeUndone"] @Localizer["TheFileWillBeMovedToTrash"]
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                <form asp-action="Delete" asp-controller="Files" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="folderId" value="@Model.FolderId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> @Localizer["DeleteFile"]
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
