@model dynamic
@inject IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["UploadFiles"];
    var folderId = ViewBag.FolderId as int?;
    var folderName = ViewBag.FolderName as string;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>
                        <i class="bi bi-cloud-upload"></i> @Localizer["UploadFiles"]
                    </h2>
                    @if (!string.IsNullOrEmpty(folderName))
                    {
                        <p class="text-muted mb-0">
                            <i class="bi bi-folder"></i> @Localizer["UploadingTo"]: <strong>@folderName</strong>
                        </p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            <i class="bi bi-folder"></i> @Localizer["UploadingTo"]: <strong>@Localizer["Root"]</strong>
                        </p>
                    }
                </div>
                <div>
                    <a href="@Url.Action("Index", new { folderId = folderId })" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> @Localizer["BackToFiles"]
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <form id="uploadForm" asp-action="Upload" asp-controller="Files" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="folderId" value="@folderId" />
                        
                        <!-- Drag and Drop Zone -->
                        <div id="dropZone" class="drop-zone mb-4">
                            <div class="drop-zone-content">
                                <i class="bi bi-cloud-upload drop-zone-icon"></i>
                                <h4 class="drop-zone-title">@Localizer["DragAndDropFiles"]</h4>
                                <p class="drop-zone-text">@Localizer["OrClickToSelectFiles"]</p>
                                <button type="button" class="btn btn-primary" id="selectFilesBtn">
                                    <i class="bi bi-folder2-open"></i> @Localizer["SelectFiles"]
                                </button>
                            </div>
                            <input type="file" 
                                   class="d-none" 
                                   id="files" 
                                   name="files" 
                                   multiple 
                                   accept=".jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx,.txt,.md,.zip,.mp4,.mp3">
                        </div>

                        <div class="mb-4">
                            <label for="visibility" class="form-label">@Localizer["Visibility"]</label>
                            <select class="form-select" id="visibility" name="visibility">
                                <option value="0">@Localizer["Public"] - @Localizer["AnyoneCanAccess"]</option>
                                <option value="1">@Localizer["Private"] - @Localizer["OnlyYouCanAccess"]</option>
                                <option value="2">@Localizer["Restricted"] - @Localizer["SpecificUsersCanAccess"]</option>
                            </select>
                        </div>

                        <div id="fileList" class="mb-4" style="display: none;">
                            <h5>@Localizer["SelectedFiles"]</h5>
                            <div class="list-group" id="selectedFiles"></div>
                        </div>

                        <div id="uploadProgress" style="display: none;">
                            <div class="progress mb-3">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                     role="progressbar" 
                                     id="progressBar"
                                     style="width: 0%">0%</div>
                            </div>
                            <p class="text-center text-muted" id="uploadStatus">@Localizer["PreparingUpload"]...</p>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" id="uploadButton" disabled>
                                <i class="bi bi-cloud-upload"></i> @Localizer["UploadFiles"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> @Localizer["UploadGuidelines"]</h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>@Localizer["YouCanUploadMultipleFiles"]</li>
                        <li>@Localizer["MaximumFileSizeIs50MB"]</li>
                        <li>@Localizer["DuplicateFilesWillBeDeduplicated"]</li>
                        <li>@Localizer["SupportedFileTypes"]: JPG, PNG, GIF, PDF, DOC, DOCX, XLS, XLSX, TXT, MD, ZIP, MP4, MP3</li>
                        <li>@Localizer["FilesAreScannedForSecurity"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const fileInput = $('#files');
            const fileList = $('#fileList');
            const selectedFiles = $('#selectedFiles');
            const uploadForm = $('#uploadForm');
            const uploadButton = $('#uploadButton');
            const uploadProgress = $('#uploadProgress');
            const progressBar = $('#progressBar');
            const uploadStatus = $('#uploadStatus');
            const dropZone = $('#dropZone');
            const selectFilesBtn = $('#selectFilesBtn');

            let selectedFilesList = [];

            // Click to select files
            selectFilesBtn.on('click', function() {
                fileInput.click();
            });

            // Also allow clicking anywhere in the drop zone
            dropZone.on('click', function(e) {
                if (e.target === this || $(e.target).hasClass('drop-zone-content') || 
                    $(e.target).hasClass('drop-zone-icon') || $(e.target).hasClass('drop-zone-title') || 
                    $(e.target).hasClass('drop-zone-text')) {
                    fileInput.click();
                }
            });

            // Prevent default drag behaviors
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropZone[0].addEventListener(eventName, preventDefaults, false);
                document.body.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            // Highlight drop zone when dragging over it
            ['dragenter', 'dragover'].forEach(eventName => {
                dropZone[0].addEventListener(eventName, highlight, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                dropZone[0].addEventListener(eventName, unhighlight, false);
            });

            function highlight(e) {
                dropZone.addClass('drop-zone-active');
            }

            function unhighlight(e) {
                dropZone.removeClass('drop-zone-active');
            }

            // Handle dropped files
            dropZone[0].addEventListener('drop', handleDrop, false);

            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                handleFiles(files);
            }

            // Handle file input change
            fileInput.on('change', function() {
                handleFiles(this.files);
            });

            function handleFiles(files) {
                if (files.length === 0) return;

                selectedFilesList = Array.from(files);
                displaySelectedFiles();
                uploadButton.prop('disabled', false);
            }

            function displaySelectedFiles() {
                selectedFiles.empty();
                let totalSize = 0;
                const maxSize = 50 * 1024 * 1024; // 50MB

                selectedFilesList.forEach((file, index) => {
                    totalSize += file.size;
                    const sizeInMB = (file.size / (1024 * 1024)).toFixed(2);
                    const isTooBig = file.size > maxSize;
                    
                    const fileItem = $(`
                        <div class="list-group-item ${isTooBig ? 'list-group-item-danger' : ''}">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="flex-grow-1">
                                    <i class="bi ${getFileIcon(file.type)}"></i>
                                    <strong>${file.name}</strong>
                                    ${isTooBig ? '<span class="badge bg-danger ms-2">Too Large</span>' : ''}
                                </div>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-secondary me-2">${sizeInMB} MB</span>
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeFile(${index})">
                                        <i class="bi bi-x"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    `);
                    selectedFiles.append(fileItem);
                });

                const totalSizeInMB = (totalSize / (1024 * 1024)).toFixed(2);
                const summaryItem = $(`
                    <div class="list-group-item list-group-item-info">
                        <strong>Total: ${selectedFilesList.length} file(s), ${totalSizeInMB} MB</strong>
                    </div>
                `);
                selectedFiles.append(summaryItem);

                fileList.show();
                dropZone.hide();
            }

            // Remove file from selection
            window.removeFile = function(index) {
                selectedFilesList.splice(index, 1);
                
                if (selectedFilesList.length === 0) {
                    fileList.hide();
                    dropZone.show();
                    uploadButton.prop('disabled', true);
                    fileInput.val('');
                } else {
                    // Update the file input
                    const dt = new DataTransfer();
                    selectedFilesList.forEach(file => dt.items.add(file));
                    fileInput[0].files = dt.files;
                    displaySelectedFiles();
                }
            };

            function getFileIcon(contentType) {
                if (contentType.startsWith('image/')) return 'bi-file-image text-primary';
                if (contentType.includes('pdf')) return 'bi-file-pdf text-danger';
                if (contentType.includes('word') || contentType.includes('document')) return 'bi-file-word text-primary';
                if (contentType.includes('excel') || contentType.includes('spreadsheet')) return 'bi-file-excel text-success';
                if (contentType.includes('powerpoint') || contentType.includes('presentation')) return 'bi-file-ppt text-warning';
                if (contentType.includes('zip') || contentType.includes('rar') || contentType.includes('7z')) return 'bi-file-zip text-secondary';
                if (contentType.includes('text')) return 'bi-file-text text-info';
                if (contentType.includes('video')) return 'bi-file-play text-danger';
                if (contentType.includes('audio')) return 'bi-file-music text-info';
                return 'bi-file-earmark';
            }

            // Handle form submission
            uploadForm.on('submit', function(e) {
                e.preventDefault();

                const formData = new FormData(this);
                
                uploadButton.prop('disabled', true);
                uploadProgress.show();
                progressBar.css('width', '0%').text('0%');
                uploadStatus.text('@Localizer["UploadingFiles"]...');

                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    xhr: function() {
                        const xhr = new window.XMLHttpRequest();
                        xhr.upload.addEventListener('progress', function(e) {
                            if (e.lengthComputable) {
                                const percentComplete = Math.round((e.loaded / e.total) * 100);
                                progressBar.css('width', percentComplete + '%').text(percentComplete + '%');
                            }
                        }, false);
                        return xhr;
                    },
                    success: function(response) {
                        progressBar.removeClass('progress-bar-animated')
                                   .removeClass('progress-bar-striped')
                                   .addClass('bg-success');
                        uploadStatus.html('<i class="bi bi-check-circle text-success"></i> @Localizer["UploadCompletedSuccessfully"]!');
                        
                        // Show success toast
                        window.showToast('@Localizer["Success"]', '@Localizer["FilesUploadedSuccessfully"]', 'success');
                        
                        setTimeout(function() {
                            window.location.href = '@Url.Action("Index", new { folderId = folderId })';
                        }, 1500);
                    },
                    error: function(xhr) {
                        progressBar.removeClass('progress-bar-animated')
                                   .removeClass('progress-bar-striped')
                                   .addClass('bg-danger');
                        
                        let errorMessage = '@Localizer["UploadFailedPleaseTryAgain"]';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        } else if (xhr.responseText) {
                            try {
                                const response = JSON.parse(xhr.responseText);
                                if (response.error) {
                                    errorMessage = response.error;
                                }
                            } catch (e) {
                                // Use default error message
                            }
                        }
                        
                        uploadStatus.html('<i class="bi bi-x-circle text-danger"></i> ' + errorMessage);
                        uploadButton.prop('disabled', false);
                        
                        // Show error toast
                        window.showToast('@Localizer["Error"]', errorMessage, 'danger');
                    }
                });
            });
        });
    </script>
}

<style>
    .drop-zone {
        border: 3px dashed #dee2e6;
        border-radius: 10px;
        padding: 60px 20px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        background-color: #f8f9fa;
    }

    .drop-zone:hover {
        border-color: #0d6efd;
        background-color: #e7f1ff;
    }

    .drop-zone-active {
        border-color: #0d6efd;
        background-color: #cfe2ff;
        transform: scale(1.02);
    }

    .drop-zone-icon {
        font-size: 4rem;
        color: #6c757d;
        margin-bottom: 1rem;
    }

    .drop-zone-active .drop-zone-icon {
        color: #0d6efd;
        animation: bounce 0.5s ease;
    }

    .drop-zone-title {
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .drop-zone-text {
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

    @@keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .list-group-item {
        transition: background-color 0.2s ease;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
    }
</style>
