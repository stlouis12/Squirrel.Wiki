@model Squirrel.Wiki.Web.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = Localizer["ChangePassword"];
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-key"></i> @Localizer["ChangePassword"]
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <input asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <div class="form-text">
                                @Localizer["PasswordRequirements"]:
                                <ul class="mb-0">
                                    <li>@Localizer["AtLeast8Characters"]</li>
                                    <li>@Localizer["AtLeastOneUppercase"]</li>
                                    <li>@Localizer["AtLeastOneLowercase"]</li>
                                    <li>@Localizer["AtLeastOneNumber"]</li>
                                    <li>@Localizer["AtLeastOneSpecialCharacter"]</li>
                                </ul>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> @Localizer["ChangePassword"]
                            </button>
                            <a asp-action="Profile" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> @Localizer["BackToProfile"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-shield-check"></i> @Localizer["PasswordSecurityTips"]
                    </h6>
                    <ul class="mb-0">
                        <li>@Localizer["UseUniquePassword"]</li>
                        <li>@Localizer["ConsiderPasswordManager"]</li>
                        <li>@Localizer["ChangePasswordRegularly"]</li>
                        <li>@Localizer["NeverSharePassword"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
