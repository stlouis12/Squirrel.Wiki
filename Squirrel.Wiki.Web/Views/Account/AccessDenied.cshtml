@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-x text-danger" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h1 class="display-4 text-danger mb-3">Access Denied</h1>
                    
                    <p class="lead text-muted mb-4">
                        You don't have permission to access this resource.
                    </p>

                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Authorization Required:</strong> This page requires specific permissions that your account doesn't have.
                    </div>

                    <hr class="my-4">

                    <div class="d-flex flex-column gap-3">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="alert alert-info mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                You are currently logged in as <strong>@User.Identity.Name</strong>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">
                                    <i class="bi bi-house-door me-2"></i>Go to Home Page
                                </a>
                                <a asp-action="Profile" asp-controller="Account" class="btn btn-outline-secondary">
                                    <i class="bi bi-person-circle me-2"></i>View Your Profile
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                You need to sign in to access this resource.
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                                </a>
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                                    <i class="bi bi-house-door me-2"></i>Go to Home Page
                                </a>
                            </div>
                        }
                    </div>

                    <div class="mt-4 text-muted small">
                        <p class="mb-1">
                            <i class="bi bi-question-circle me-1"></i>
                            If you believe you should have access to this resource, please contact your administrator.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
