@model Squirrel.Wiki.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>User Profile
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Username</label>
                                <div class="fw-bold">@Model.Username</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Email</label>
                                <div class="fw-bold">@Model.Email</div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">User ID</label>
                                <div class="font-monospace small">@Model.UserId</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Display Name</label>
                                <div class="fw-bold">@Model.DisplayName</div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-4">
                        <h5 class="mb-3">
                            <i class="bi bi-shield-check me-2"></i>Roles & Permissions
                        </h5>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-primary fs-6">
                                    <i class="bi bi-award me-1"></i>@role
                                </span>
                            }
                        </div>
                        
                        <div class="mt-3">
                            @if (Model.IsAdmin)
                            {
                                <div class="alert alert-success mb-2">
                                    <i class="bi bi-check-circle me-2"></i>
                                    <strong>Administrator Access:</strong> Full system access including configuration and user management
                                </div>
                            }
                            @if (Model.IsEditor)
                            {
                                <div class="alert alert-info mb-2">
                                    <i class="bi bi-pencil-square me-2"></i>
                                    <strong>Editor Access:</strong> Can create, edit, and manage wiki pages
                                </div>
                            }
                            @if (!Model.IsAdmin && !Model.IsEditor)
                            {
                                <div class="alert alert-warning mb-2">
                                    <i class="bi bi-eye me-2"></i>
                                    <strong>Viewer Access:</strong> Read-only access to wiki content
                                </div>
                            }
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Last Login</label>
                                <div>@Model.LastLoginOn.ToString("MMMM dd, yyyy 'at' h:mm tt")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Account Created</label>
                                <div>@Model.CreatedOn.ToString("MMMM dd, yyyy")</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to Home
                        </a>
                        <div class="text-muted small">
                            <i class="bi bi-info-circle me-1"></i>
                            Profile information is managed by your authentication provider
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
