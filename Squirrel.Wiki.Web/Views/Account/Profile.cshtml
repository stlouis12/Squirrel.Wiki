@using Squirrel.Wiki.Web.Extensions
@model Squirrel.Wiki.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = Localizer["UserProfile"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>@Localizer["UserProfile"]
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">@Localizer["Username"]</label>
                                <div class="fw-bold">@Model.Username</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">@Localizer["Email"]</label>
                                <div class="fw-bold">@Model.Email</div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">@Localizer["UserId"]</label>
                                <div class="font-monospace small">@Model.UserId</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">@Localizer["DisplayName"]</label>
                                <div class="fw-bold">@Model.DisplayName</div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-4">
                        <h5 class="mb-3">
                            <i class="bi bi-shield-check me-2"></i>@Localizer["RolesAndPermissions"]
                        </h5>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-primary fs-6">
                                    <i class="bi bi-award me-1"></i>@role
                                </span>
                            }
                        </div>
                        
                        <div class="mt-3">
                            @if (Model.IsAdmin)
                            {
                                <div class="alert alert-success mb-2">
                                    <i class="bi bi-check-circle me-2"></i>
                                    <strong>@Localizer["AdministratorAccess"]:</strong> @Localizer["AdministratorAccessDescription"]
                                </div>
                            }
                            @if (Model.IsEditor)
                            {
                                <div class="alert alert-info mb-2">
                                    <i class="bi bi-pencil-square me-2"></i>
                                    <strong>@Localizer["EditorAccess"]:</strong> @Localizer["EditorAccessDescription"]
                                </div>
                            }
                            @if (!Model.IsAdmin && !Model.IsEditor)
                            {
                                <div class="alert alert-warning mb-2">
                                    <i class="bi bi-eye me-2"></i>
                                    <strong>@Localizer["ViewerAccess"]:</strong> @Localizer["ViewerAccessDescription"]
                                </div>
                            }
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">@Localizer["LastLogin"]</label>
                                <div>
                                    @if (Model.LastLoginOn.HasValue)
                                    {
                                        if (Model.TimezoneService != null)
                                        {
                                            @await Model.LastLoginOn.Value.ToLocalTimeStringAsync(Model.TimezoneService, "MMMM dd, yyyy 'at' h:mm tt")
                                        }
                                        else
                                        {
                                            @Model.LastLoginOn.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">@Localizer["Never"]</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">@Localizer["AccountCreated"]</label>
                                <div>
                                    @if (Model.TimezoneService != null)
                                    {
                                        @await Model.CreatedOn.ToLocalDateStringAsync(Model.TimezoneService)
                                    }
                                    else
                                    {
                                        @Model.CreatedOn.ToString("MMMM dd, yyyy")
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">@Localizer["AuthenticationProvider"]</label>
                                <div>
                                    <span class="badge bg-info">@Model.Provider</span>
                                </div>
                            </div>
                        </div>
                        @if (Model.Provider == "Local" && Model.LastPasswordChangeOn.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-muted small">@Localizer["LastPasswordChange"]</label>
                                    <div>
                                        @if (Model.TimezoneService != null)
                                        {
                                            @await Model.LastPasswordChangeOn.Value.ToLocalDateStringAsync(Model.TimezoneService)
                                        }
                                        else
                                        {
                                            @Model.LastPasswordChangeOn.Value.ToString("MMMM dd, yyyy")
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>@Localizer["BackToHome"]
                        </a>
                        <div class="d-flex gap-2 align-items-center">
                            @if (Model.Provider == "Local")
                            {
                                <a asp-action="ChangePassword" class="btn btn-primary">
                                    <i class="bi bi-key me-1"></i>@Localizer["ChangePassword"]
                                </a>
                            }
                            <div class="text-muted small">
                                <i class="bi bi-info-circle me-1"></i>
                                @Localizer["ProfileManagedByProvider"]
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
