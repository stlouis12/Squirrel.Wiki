@model Squirrel.Wiki.Web.Models.PluginListViewModel
@{
    ViewData["Title"] = Localizer["Plugins"];
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1>
                <i class="fas fa-plug"></i> @Localizer["Plugins"]
            </h1>
            <p class="text-muted">@Localizer["ManagePlugins"]</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Localizer["Close"]"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Localizer["Close"]"></button>
        </div>
    }

    @if (!Model.Plugins.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> @Localizer["NoPluginsFound"]
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Localizer["Name"]</th>
                                <th>@Localizer["Description"]</th>
                                <th>@Localizer["Version"]</th>
                                <th>@Localizer["Status"]</th>
                                <th>@Localizer["Configuration"]</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var plugin in Model.Plugins)
                            {
                                <tr>
                                    <td>
                                        <strong>@plugin.Name</strong>
                                        @if (plugin.IsCorePlugin)
                                        {
                                            <br />
                                            <span class="badge bg-primary">
                                                <i class="fas fa-shield-alt"></i> @Localizer["CorePlugin"]
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@plugin.Description</small>
                                        <br />
                                        <small class="text-muted">@Localizer["By"] @plugin.Author</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">v@(plugin.Version)</span>
                                    </td>
                                    <td>
                                        @if (plugin.IsEnabled)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> @Localizer["Enabled"]
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times-circle"></i> @Localizer["Disabled"]
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (plugin.IsConfigured)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> @Localizer["Configured"]
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-exclamation-triangle"></i> @Localizer["NotConfigured"]
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@plugin.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="@Localizer["ViewDetails"]">
                                                <i class="fas fa-info-circle"></i> @Localizer["Details"]
                                            </a>
                                            
                                            <a asp-action="Configure" asp-route-id="@plugin.Id" 
                                               class="btn btn-sm btn-outline-secondary" 
                                               title="@Localizer["ConfigurePlugin"]">
                                                <i class="fas fa-cog"></i> @Localizer["Configure"]
                                            </a>
                                            
                                            @if (plugin.CanEnable)
                                            {
                                                <form asp-action="Enable" asp-route-id="@plugin.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" 
                                                            class="btn btn-sm btn-success" 
                                                            title="@Localizer["EnablePlugin"]"
                                                            onclick="return confirm('@Localizer["ConfirmEnablePlugin", plugin.Name]');">
                                                        <i class="fas fa-toggle-on"></i> @Localizer["Enable"]
                                                    </button>
                                                </form>
                                            }
                                            
                                            @if (plugin.CanDisable)
                                            {
                                                <form asp-action="Disable" asp-route-id="@plugin.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" 
                                                            class="btn btn-sm btn-warning" 
                                                            title="@Localizer["DisablePlugin"]"
                                                            onclick="return confirm('@Localizer["ConfirmDisablePlugin", plugin.Name]');">
                                                        <i class="fas fa-toggle-off"></i> @Localizer["Disable"]
                                                    </button>
                                                </form>
                                            }
                                            
                                            @if (plugin.CanDelete)
                                            {
                                                <form asp-action="Delete" asp-route-id="@plugin.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" 
                                                            class="btn btn-sm btn-danger" 
                                                            title="@Localizer["DeletePlugin"]"
                                                            onclick="return confirm('@Localizer["ConfirmDeletePlugin", plugin.Name]');">
                                                        <i class="fas fa-trash"></i> @Localizer["Delete"]
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <i class="fas fa-info-circle"></i> 
                <strong>@Localizer["Note"]:</strong> @Localizer["CorePluginsCannotBeDeleted"]
            </p>
        </div>
    }
</div>
