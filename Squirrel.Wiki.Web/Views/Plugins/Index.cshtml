@model Squirrel.Wiki.Web.Models.PluginListViewModel
@{
    ViewData["Title"] = Localizer["Plugins"];
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1>
                <i class="fas fa-plug"></i> @Localizer["Plugins"]
            </h1>
            <p class="text-muted">@Localizer["ManagePlugins"]</p>
        </div>
    </div>

    @if (!Model.Plugins.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> @Localizer["NoPluginsFound"]
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Localizer["Name"]</th>
                                <th>@Localizer["Description"]</th>
                                <th>@Localizer["Version"]</th>
                                <th>@Localizer["Status"]</th>
                                <th>@Localizer["Configuration"]</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var plugin in Model.Plugins)
                            {
                                <tr>
                                    <td>
                                        <strong>@plugin.Name</strong>
                                        @if (plugin.IsCorePlugin)
                                        {
                                            <br />
                                            <span class="badge bg-primary">
                                                <i class="fas fa-shield-alt"></i> @Localizer["CorePlugin"]
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@plugin.Description</small>
                                        <br />
                                        <small class="text-muted">@Localizer["By"] @plugin.Author</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">v@(plugin.Version)</span>
                                    </td>
                                    <td>
                                        @if (plugin.IsEnabled)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> @Localizer["Enabled"]
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times-circle"></i> @Localizer["Disabled"]
                                            </span>
                                        }
                                        @if (plugin.IsEnabledLockedByEnvironment)
                                        {
                                            <br>
                                            <span class="badge bg-info" 
                                                  data-bs-toggle="tooltip" 
                                                  data-bs-placement="top" 
                                                  title="@Localizer["PluginConfiguredViaEnvironment"]">
                                                <i class="bi bi-lock-fill"></i> @Localizer["Environment"]
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (plugin.IsConfigured)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> @Localizer["Configured"]
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-exclamation-triangle"></i> @Localizer["NotConfigured"]
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@plugin.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="@Localizer["ViewDetails"]">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            
                                            <a asp-action="Configure" asp-route-id="@plugin.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="@Localizer["ConfigurePlugin"]">
                                               <i class="bi bi-pencil"></i>
                                            </a>
                                            
                                            @if (plugin.CanEnable)
                                            {
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-success" 
                                                        title="@Localizer["EnablePlugin"]"
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#enableModal-@plugin.Id">
                                                    <i class="bi bi-arrow-up-square"></i>
                                                </button>
                                            }
                                            
                                            @if (plugin.CanDisable)
                                            {
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-warning" 
                                                        title="@Localizer["DisablePlugin"]"
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#disableModal-@plugin.Id">
                                                    <i class="bi bi-arrow-down-square"></i>
                                                </button>
                                            }
                                            
                                            @if (plugin.CanDelete && !plugin.IsEnabledLockedByEnvironment)
                                            {
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-danger" 
                                                        title="@Localizer["DeletePlugin"]"
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteModal-@plugin.Id">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <i class="fas fa-info-circle"></i> 
                <strong>@Localizer["Note"]:</strong> @Localizer["CorePluginsCannotBeDeleted"]
            </p>
        </div>

        @* Enable/Disable Modals *@
        @foreach (var plugin in Model.Plugins)
        {
            @* Enable Modal *@
            @if (plugin.CanEnable)
            {
                <div class="modal fade" id="enableModal-@plugin.Id" tabindex="-1" aria-labelledby="enableModalLabel-@plugin.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-success text-white">
                                <h5 class="modal-title" id="enableModalLabel-@plugin.Id">
                                    <i class="fas fa-toggle-on"></i> @Localizer["EnablePlugin"]
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="@Localizer["Close"]"></button>
                            </div>
                            <div class="modal-body">
                                <p>@Localizer["ConfirmEnablePluginMessage", plugin.Name]</p>
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle"></i>
                                    <strong>@plugin.Name</strong> v@(plugin.Version)
                                    <br />
                                    <small>@plugin.Description</small>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fas fa-times"></i> @Localizer["Cancel"]
                                </button>
                                <form asp-action="Enable" asp-route-id="@plugin.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-toggle-on"></i> @Localizer["EnablePlugin"]
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @* Disable Modal *@
            @if (plugin.CanDisable)
            {
                <div class="modal fade" id="disableModal-@plugin.Id" tabindex="-1" aria-labelledby="disableModalLabel-@plugin.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-warning">
                                <h5 class="modal-title" id="disableModalLabel-@plugin.Id">
                                    <i class="fas fa-toggle-off"></i> @Localizer["DisablePlugin"]
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@Localizer["Close"]"></button>
                            </div>
                            <div class="modal-body">
                                <p>@Localizer["ConfirmDisablePluginMessage", plugin.Name]</p>
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <strong>@plugin.Name</strong> v@(plugin.Version)
                                    <br />
                                    <small>@Localizer["DisablePluginWarning"]</small>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fas fa-times"></i> @Localizer["Cancel"]
                                </button>
                                <form asp-action="Disable" asp-route-id="@plugin.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-toggle-off"></i> @Localizer["DisablePlugin"]
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @* Delete Modal *@
            @if (plugin.CanDelete && !plugin.IsEnabledLockedByEnvironment)
            {
                <div class="modal fade" id="deleteModal-@plugin.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@plugin.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title" id="deleteModalLabel-@plugin.Id">
                                    <i class="fas fa-trash"></i> @Localizer["DeletePlugin"]
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="@Localizer["Close"]"></button>
                            </div>
                            <div class="modal-body">
                                <p>@Localizer["ConfirmDeletePlugin", plugin.Name]</p>
                                <div class="alert alert-danger mb-0">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <strong>@plugin.Name</strong> v@(plugin.Version)
                                    <br />
                                    <small>@Localizer["DeletePluginWarning"]</small>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fas fa-times"></i> @Localizer["Cancel"]
                                </button>
                                <form asp-action="Delete" asp-route-id="@plugin.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> @Localizer["DeletePlugin"]
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
