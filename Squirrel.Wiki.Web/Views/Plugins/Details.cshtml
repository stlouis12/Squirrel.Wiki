@model Squirrel.Wiki.Web.Models.PluginDetailsViewModel
@{
    ViewData["Title"] = $"{Model.Name} - {Localizer["PluginDetails"]}";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Plugins"]</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            
            <h1>
                <i class="fas fa-plug"></i> @Model.Name
            </h1>
            <p class="text-muted">@Model.Description</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Localizer["Close"]"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Localizer["Close"]"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> @Localizer["PluginInformation"]</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">@Localizer["PluginID"]:</dt>
                        <dd class="col-sm-8"><code>@Model.PluginId</code></dd>

                        <dt class="col-sm-4">@Localizer["Version"]:</dt>
                        <dd class="col-sm-8"><span class="badge bg-secondary">v@(Model.Version)</span></dd>

                        <dt class="col-sm-4">@Localizer["Author"]:</dt>
                        <dd class="col-sm-8">@Model.Author</dd>

                        <dt class="col-sm-4">@Localizer["Type"]:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsCorePlugin)
                            {
                                <span class="badge bg-primary">
                                    <i class="fas fa-shield-alt"></i> @Localizer["CorePlugin"]
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-puzzle-piece"></i> @Localizer["ThirdParty"]
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">@Localizer["Status"]:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsEnabled)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle"></i> @Localizer["Enabled"]
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-times-circle"></i> @Localizer["Disabled"]
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">@Localizer["Configuration"]:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsConfigured)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check"></i> @Localizer["Configured"]
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-exclamation-triangle"></i> @Localizer["NotConfigured"]
                                </span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-cogs"></i> @Localizer["Actions"]</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Configure" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-cog"></i> @Localizer["ConfigurePlugin"]
                        </a>

                        @if (Model.CanEnable)
                        {
                            <form asp-action="Enable" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100" onclick="return confirm('@Localizer["ConfirmEnablePlugin", Model.Name]');">
                                    <i class="fas fa-toggle-on"></i> @Localizer["EnablePlugin"]
                                </button>
                            </form>
                        }

                        @if (Model.CanDisable)
                        {
                            <form asp-action="Disable" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning w-100" onclick="return confirm('@Localizer["ConfirmDisablePlugin", Model.Name]');">
                                    <i class="fas fa-toggle-off"></i> @Localizer["DisablePlugin"]
                                </button>
                            </form>
                        }

                        @if (Model.CanDelete)
                        {
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger w-100" onclick="return confirm('@Localizer["ConfirmDeletePlugin", Model.Name]');">
                                    <i class="fas fa-trash"></i> @Localizer["DeletePlugin"]
                                </button>
                            </form>
                        }

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> @Localizer["BackToList"]
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-sliders-h"></i> @Localizer["CurrentConfiguration"]</h5>
                </div>
                <div class="card-body">
                    @if (!Model.ConfigurationSchema.Any())
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle"></i> @Localizer["PluginDoesNotRequireConfiguration"]
                        </div>
                    }
                    else if (!Model.IsConfigured)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> @Localizer["PluginNotConfiguredYet"] 
                            <a asp-action="Configure" asp-route-id="@Model.Id" class="alert-link">@Localizer["ConfigureItNow"]</a> @Localizer["ToEnableIt"]
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Setting"]</th>
                                        <th>@Localizer["Value"]</th>
                                        <th>@Localizer["Required"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ConfigurationSchema.OrderBy(c => c.DisplayName))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.DisplayName</strong>
                                                @if (item.IsSecret)
                                                {
                                                    <br />
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-lock"></i> @Localizer["Secret"]
                                                    </span>
                                                }
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <br />
                                                    <small class="text-muted">@item.Description</small>
                                                }
                                            </td>
                                            <td>
                                                @if (Model.CurrentValues.ContainsKey(item.Key))
                                                {
                                                    if (item.IsSecret)
                                                    {
                                                        <code>@Model.CurrentValues[item.Key]</code>
                                                    }
                                                    else
                                                    {
                                                        <code>@Model.CurrentValues[item.Key]</code>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@Localizer["NotSet"]</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsRequired)
                                                {
                                                    <span class="badge bg-danger">@Localizer["Required"]</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@Localizer["Optional"]</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <a asp-action="Configure" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="fas fa-edit"></i> @Localizer["EditConfiguration"]
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
