@model Squirrel.Wiki.Web.Models.Admin.CategoryTreeNode

<div class="category-node" data-category-id="@Model.Id" data-level="@Model.Level">
    <div class="category-item d-flex align-items-center py-2 px-3 border-bottom">
        <div class="category-toggle me-2">
            @if (Model.Children.Any())
            {
                <button type="button" class="btn btn-sm btn-link p-0 category-expand-btn" data-expanded="true">
                    <i class="bi bi-chevron-down"></i>
                </button>
            }
            else
            {
                <span class="category-spacer" style="width: 24px; display: inline-block;"></span>
            }
        </div>
        
        <div class="category-icon me-2">
            @if (Model.Children.Any())
            {
                <i class="bi bi-folder-fill text-warning"></i>
            }
            else
            {
                <i class="bi bi-folder text-muted"></i>
            }
        </div>
        
        <div class="category-info flex-grow-1">
            <div class="d-flex align-items-center">
                <a asp-action="Details" asp-route-id="@Model.Id" class="category-name text-decoration-none text-dark fw-bold me-2">
                    @Model.Name
                </a>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <small class="text-muted">- @Model.Description</small>
                }
            </div>
            
            <div class="category-meta">
                <small class="text-muted">
                    <span class="me-3">
                        <i class="bi bi-file-text"></i> @Model.PageCount page@(Model.PageCount != 1 ? "s" : "")
                    </span>
                    @if (Model.Children.Any())
                    {
                        <span class="me-3">
                            <i class="bi bi-folder"></i> @Model.SubcategoryCount subcategor@(Model.SubcategoryCount != 1 ? "ies" : "y")
                        </span>
                    }
                    <span class="me-3">
                        <i class="bi bi-diagram-3"></i> Level @Model.Level
                    </span>
                    <span>
                        <i class="bi bi-clock"></i> @Model.ModifiedOn.ToString("MMM dd, yyyy")
                    </span>
                </small>
            </div>
        </div>
        
        <div class="category-actions ms-auto">
            <div class="btn-group btn-group-sm" role="group">
                <a asp-action="Create" asp-route-parentId="@Model.Id" 
                   class="btn btn-outline-success" 
                   title="Add Subcategory">
                    <i class="bi bi-plus-circle"></i>
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" 
                   class="btn btn-outline-primary" 
                   title="Edit">
                    <i class="bi bi-pencil"></i>
                </a>
                <a asp-action="Details" asp-route-id="@Model.Id" 
                   class="btn btn-outline-info" 
                   title="View Details">
                    <i class="bi bi-info-circle"></i>
                </a>
                <button type="button" 
                        class="btn btn-outline-danger delete-category-btn" 
                        data-category-id="@Model.Id"
                        data-category-name="@Model.Name"
                        data-subcategory-count="@Model.SubcategoryCount"
                        data-page-count="@Model.PageCount"
                        title="Delete">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
    </div>
    
    @if (Model.Children.Any())
    {
        <div class="category-children ms-4">
            @foreach (var child in Model.Children)
            {
                @await Html.PartialAsync("_CategoryTreeNode", child)
            }
        </div>
    }
</div>
