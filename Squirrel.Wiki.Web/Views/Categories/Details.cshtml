@model Squirrel.Wiki.Web.Models.Admin.CategoryDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Categories</a></li>
                    @foreach (var crumb in Model.Breadcrumbs.Take(Model.Breadcrumbs.Count - 1))
                    {
                        <li class="breadcrumb-item">@crumb</li>
                    }
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            
            <h1>
                <i class="bi bi-folder-fill text-warning"></i> @Model.Name
            </h1>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="lead text-muted">@Model.Description</p>
            }
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-action="Create" asp-route-parentId="@Model.Id" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add Subcategory
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Subcategories -->
            @if (Model.Subcategories.Any())
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-folder"></i> Subcategories (@Model.SubcategoryCount)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var subcategory in Model.Subcategories)
                            {
                                <a asp-action="Details" asp-route-id="@subcategory.Id" 
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-folder-fill text-warning me-2"></i>
                                        <strong>@subcategory.Name</strong>
                                        @if (!string.IsNullOrEmpty(subcategory.Description))
                                        {
                                            <br />
                                            <small class="text-muted ms-4">@subcategory.Description</small>
                                        }
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-info me-2">@subcategory.PageCount pages</span>
                                        @if (subcategory.Children.Any())
                                        {
                                            <span class="badge bg-secondary">@subcategory.SubcategoryCount subcategories</span>
                                        }
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Pages -->
            @if (Model.Pages.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-file-text"></i> Pages in this Category (@Model.DirectPageCount)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Last Modified</th>
                                        <th>Modified By</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pageItem in Model.Pages)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Wiki" asp-action="Index" asp-route-id="@pageItem.Id" asp-route-slug="@pageItem.Slug" 
                                                   class="text-decoration-none">
                                                    <i class="bi bi-file-text me-1"></i>
                                                    @pageItem.Title
                                                </a>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @pageItem.ModifiedOn.ToString("MMM dd, yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <small class="text-muted">@pageItem.ModifiedBy</small>
                                            </td>
                                            <td class="text-end">
                                                <a asp-controller="Pages" asp-action="Edit" asp-route-id="@pageItem.Id" 
                                                   class="btn btn-sm btn-outline-primary" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else if (!Model.Subcategories.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> This category is empty. 
                    <a asp-controller="Pages" asp-action="Create" asp-route-categoryId="@Model.Id" class="alert-link">
                        Create a page
                    </a> in this category or 
                    <a asp-action="Create" asp-route-parentId="@Model.Id" class="alert-link">
                        add a subcategory
                    </a>.
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Category Information -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Full Path:</dt>
                        <dd class="col-sm-7">
                            <code class="small">@Model.FullPath</code>
                        </dd>

                        <dt class="col-sm-5">Slug:</dt>
                        <dd class="col-sm-7">
                            <code class="small">@Model.Slug</code>
                        </dd>

                        <dt class="col-sm-5">Level:</dt>
                        <dd class="col-sm-7">@Model.Level</dd>

                        @if (Model.ParentId.HasValue)
                        {
                            <dt class="col-sm-5">Parent:</dt>
                            <dd class="col-sm-7">
                                <a asp-action="Details" asp-route-id="@Model.ParentId">
                                    @Model.ParentName
                                </a>
                            </dd>
                        }

                        <dt class="col-sm-5">Created:</dt>
                        <dd class="col-sm-7">
                            <small>
                                @Model.CreatedOn.ToString("MMM dd, yyyy")<br />
                                by @Model.CreatedBy
                            </small>
                        </dd>

                        <dt class="col-sm-5">Modified:</dt>
                        <dd class="col-sm-7">
                            <small>
                                @Model.ModifiedOn.ToString("MMM dd, yyyy")<br />
                                by @Model.ModifiedBy
                            </small>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Statistics -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="stat-box">
                                <h3 class="text-primary">@Model.DirectPageCount</h3>
                                <p class="text-muted small mb-0">Direct Pages</p>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="stat-box">
                                <h3 class="text-info">@Model.PageCount</h3>
                                <p class="text-muted small mb-0">Total Pages</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="stat-box">
                                <h3 class="text-success">@Model.SubcategoryCount</h3>
                                <p class="text-muted small mb-0">Subcategories</p>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <p class="small text-muted mb-0">
                        <i class="bi bi-info-circle"></i> Total pages includes pages in all subcategories.
                    </p>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Pages" asp-action="Create" asp-route-categoryId="@Model.Id" 
                           class="btn btn-outline-primary">
                            <i class="bi bi-file-plus"></i> Create Page Here
                        </a>
                        <a asp-action="Create" asp-route-parentId="@Model.Id" 
                           class="btn btn-outline-success">
                            <i class="bi bi-folder-plus"></i> Add Subcategory
                        </a>
                        <a asp-controller="Pages" asp-action="Category" asp-route-slug="@Model.Slug" 
                           class="btn btn-outline-info">
                            <i class="bi bi-eye"></i> View Public Page
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/toast-notifications.js"></script>
}
