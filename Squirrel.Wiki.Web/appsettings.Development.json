{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=squirrel_wiki.db"
  },
  "Database": {
    "Provider": "Sqlite",
    "AutoMigrate": true,
    "SeedData": true
  },
  "Caching": {
    "Provider": "Memory"
  },
  "Authentication": {
    "OpenIdConnect": {
      "Authority": "https://localhost:8080/realms/squirrel",
      "ClientId": "squirrel-wiki-dev",
      "ClientSecret": "dev-secret",
      "RequireHttpsMetadata": false
    }
  },
  "Squirrel": {
    "SiteName": "Squirrel Wiki (Development)",
    "SiteUrl": "https://localhost:5001"
  }
}
